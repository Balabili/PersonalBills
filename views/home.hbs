<div id="home" v-cloak>
    {{!-- 导航条 --}}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">我的账单</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-7">
                <ul class="nav navbar-nav">
                    <li><a href="javascript:void(0);">收支总览</a></li>
                    <li><a href="javascript:void(0);">收支详情</a></li>
                    <li class="active"><a href="javascript:void(0);">添加账单</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">xichen<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="javascript:void(0);" v-on:click="logout">登出</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">
        <div v-if="isAddBills" class="add-bill-content col-md-8 col-md-offset-2">
            <h2 style="text-align:center;">{{currentDate}}账单</h2>
            <ul class="list-group">
                <li class="list-group-item row">
                    <span class="col-md-1"></span>
                    <span class="col-md-6">条目</span>
                    <span class="col-md-3">金额</span>
                    <span class="col-md-2">操作</span>
                </li>
                <li v-for="billItem in billItems" class="list-group-item row" :class="{bgYellow:!billItem.isInput,bgGreen:billItem.isInput}">
                    <span class="col-md-1">${billItem.text}</span>
                    <span class="col-md-6">${billItem.item}</span>
                    <span class="col-md-3">${billItem.acount}</span>
                    <span class="glyphicon glyphicon-pencil col-md-1 cursor-pointer" style="color:#3F9F00;" title="编辑"></span>
                    <span class="glyphicon glyphicon-remove col-md-1 cursor-pointer" style="color:red;" title="删除"></span>
                </li>
                <li v-if="showNoItemMsg" class="list-group-item row">
                    <span style="display:block;text-align:center;">还没有记录</span>
                </li>
            </ul>
            <div style="width:180px;margin:0 auto;">
                <button type="button" class="btn btn-warning" @click="addBill(false)">支出</button>
                <button type="button" class="btn btn-success" @click="addBill(true)">收入</button>
                <button type="button" class="btn btn-primary" @click="saveBill">保存</button>
            </div>
            <div class=" modal fade " id="myModal " tabindex="-1 " role="dialog " aria-labelledby="myModalLabel ">
                <div class="modal-dialog " role="document ">
                    <div class="modal-content ">
                        <div class="modal-header ">
                            <button type="button " class="close " data-dismiss="modal " aria-label="Close ">  
                            <span aria-hidden="true ">×</span>
                        </button>
                            <h4 class="modal-title " id="myModalLabel ">${modalTitle}</h4>
                        </div>
                        <div class="modal-body ">
                            <div class="form-group ">
                                <label for="billItem ">条目</label>
                                <input type="text " class="form-control " name="billItem " id="billItem " maxlength="20
                    " placeholder="最长20字 ">
                            </div>
                            <div class="form-group ">
                                <label for="acount ">金额</label>
                                <input type="text " class="form-control " name="acount " id="acount " placeholder="请输入数字 ">
                            </div>
                        </div>
                        <div class="modal-footer ">
                            <button type="button " class="btn btn-default " data-dismiss="modal ">关闭</button>
                            <button type="button " class="btn btn-primary " @click="saveItem ">保存</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>